{% extends "base.html.twig" %}

{% block title %}Edit book{% endblock %}

{% block body %}
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/book/list">Books</a></li>
                <li class="breadcrumb-item"><a href="/book/view/{{ book.id }}">{{ book.title }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
            </ol>
        </nav>

        <h2 class="m-0">Edit a book</h2>

        <hr>

        {% if errors %}
            <div class="alert alert-danger" role="alert">
                <ul class="m-0 pl-3">
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>

            <hr>
        {% endif %}

        <form action="/book/edit/{{ book.id }}" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="bookTitle">Title</label>
                <input
                        type="text"
                        class="form-control"
                        name="title"
                        id="bookTitle"
                        placeholder="Book title"
                        required="required"
                        value="{{ request.get('title') ?: book.title }}">
            </div>

            <div class="form-group">
                <label for="bookGenre">Genre</label>
                <select class="form-control selectpicker" name="genre" id="bookGenre" data-live-search="true">
                    {% for genre in genres %}
                        <option value="{{ genre.id }}" {{ genre.id is same as(request.getInt('genre', -1)) ? 'selected="selected"' : '' }}>
                            {{ genre.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="bookAuthor">Author</label>
                <select class="form-control selectpicker" name="author" id="bookAuthor" data-live-search="true">
                    {% for author in authors %}
                        <option value="{{ author.id }}" {{ author.id is same as(request.getInt('author', -1)) ? 'selected="selected"' : '' }}>
                            {{ author.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="bookLanguage">Language</label>
                <select class="form-control selectpicker" name="language" id="bookLanguage" data-live-search="true">
                    {% for language in languages %}
                        <option value="{{ language.id }}" {{ language.id is same as(request.getInt('language', -1)) ? 'selected="selected"' : '' }}>
                            {{ language.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label for="bookPublicationDate">Publication date</label>
                <input
                        type="text"
                        class="form-control"
                        name="publication_date"
                        id="bookPublicationDate"
                        placeholder="Book publication date"
                        value="{{ request.get('publication_date') ?: book.publicationDate.format('Y-m-d') }}">
            </div>

            <div class="form-group">
                <label for="bookISBN">ISBN</label>
                <input
                        type="text"
                        class="form-control"
                        name="isbn"
                        id="bookISBN"
                        placeholder="ISBN-13 number"
                        required="required"
                        value="{{ request.get('isbn') ?: book.isbn }}">
            </div>

            <div class="form-group">
                <label for="bookDescription">Description</label>
                <textarea
                        class="form-control"
                        name="description"
                        id="bookDescription"
                        placeholder="Book description"
                        rows="8">{{ request.get('description') ?: book.description }}</textarea>
            </div>

            <div class="form-group">
                <label for="bookPicture">Image</label>
                <div class="custom-file">
                    <input
                            type="file"
                            class="custom-file-input"
                            name="picture"
                            id="bookPicture">
                    <label class="custom-file-label" for="bookPicture">
                        {{ book.picture ?: 'Choose file' }}
                    </label>
                </div>
            </div>

            <div class="form-group clearfix">
                <div class="float-right">
                    <a href="/book/view/{{ book.id }}" class="btn">Cancel</a>
                    <button type="submit" class="btn btn-primary">Edit Book</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}

{% block style %}
    <link rel="stylesheet" href="{{ asset("css/bootstrap-select.css") }}">
    <link rel="stylesheet" href="{{ asset("css/bootstrap-datepicker3.css") }}">
{% endblock %}

{% block script %}
    <script src="{{ asset("js/bootstrap-select.js") }}"></script>
    <script src="{{ asset("js/bootstrap-datepicker.js") }}"></script>
    <script>
        $('#bookPublicationDate').datepicker({
            format: 'yyyy-mm-dd',
            uiLibrary: 'bootstrap4'
        });

        $('.custom-file-input').on('change',function(){
            $(this).next('.custom-file-label').addClass("selected").html($(this).val());
        })
    </script>
{% endblock %}
